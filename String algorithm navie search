#include<iostream>
using namespace std;
int main(){
    string text;
    getline(cin,text);
    string pattern;
    cin>>pattern;
    int i,j;
    for( i=0;i<text.length();i++){
        for(j=0;j<pattern.length();j++){
            if(text[i+j]!=pattern[j]){
                break;
            }
        }
        if(pattern.length()==j){
            cout<<"Pattern found at index "<<i<<endl;
        }
    }
}
