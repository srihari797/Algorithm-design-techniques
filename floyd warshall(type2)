Input 1 :
4
3
0 1 2
1 2 3
2 3 4
Output 1 :
Original matrix
0 2 INF INF 
2 0 3 INF 
INF 3 0 4 
INF INF 4 0 

Shortest path matrix
0 2 5 9 
2 0 3 7 
5 3 0 4 
9 7 4 0 

#include<iostream>
#include<vector>
using namespace std;

int main(){
    const int INF=1e9;
    int V,E;
    cin>>V>>E;
    vector<vector<int>> arr(V,vector<int>(V,INF));
    for(int i=0;i<V;i++){
        arr[i][i]=0;
        
    }
    for(int i=0;i<E;i++){
        int u,v,w;
        cin>>u>>v>>w;
        arr[u][v]=w;
        arr[v][u]=w;
    }
    cout<<"Original matrix"<<endl;
    for(int i=0;i<V;i++){
        for(int j=0;j<V;j++){
            if(arr[i][j]==INF){
                cout<<"INF ";
            }
            else{
                cout<<arr[i][j]<<" ";
            }
        }
        cout<<endl;
    }
    for(int k=0;k<V;k++){
        for(int i=0;i<V;i++){
            for(int j=0;j<V;j++ ){
                arr[i][j]=min(arr[i][j],arr[i][k]+arr[k][j]);
            }
        }
    }
    cout<<"Shortest path matrix"<<endl;
    for(int i=0;i<V;i++){
        for(int j=0;j<V;j++){
            cout<<arr[i][j]<<" ";
        }
        cout<<endl;
    }
}
